---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro"
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content='Documentación de la API de Fake Rubik Store, proyecto parte del portafolio de Julio Rodríguez'
		/>
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<NavBar />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	body {
		display: grid;
		grid-template-columns: 1fr;
		grid-template-rows: auto 1fr auto;
		grid-template-areas:
			"header"
			"main"
			"footer ";
		min-height: 100vh;
		background-color: #161925;
	}
</style>
