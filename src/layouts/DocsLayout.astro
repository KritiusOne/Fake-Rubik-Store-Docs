---
import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar.astro";
import Sidebar from "../components/Sidebar.astro";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Documentación de la API de Fake Rubik Store, proyecto parte del portafolio de Julio Rodríguez'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavBar />
    <Sidebar />
    <slot/>
    <Footer />
  </body>
</html>
<style is:global>
  body {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: auto 1fr auto;
    grid-template-areas:
      "header header header header"
      "aside main main main"
      "aside footer footer footer";
    min-height: 100vh;
    background-color: #161925;
  }
  .header {
    grid-area: header;
  }
  .footer {
    grid-area: footer;
  }
  .main {
    grid-area: main;
  }
  .aside {
    grid-area: aside;
  }
  @media (max-width: 768px) {
    body {
      display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: auto 1fr auto;
      grid-template-areas:
        "header"
        "main"
        "footer";
      min-height: 100vh;
      background-color: #161925;
    }
    .aside {
      grid-area: none;
    }
    .footer {
      grid-area: footer;
    }
  }
</style>
